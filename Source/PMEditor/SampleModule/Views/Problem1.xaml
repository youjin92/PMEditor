<UserControl x:Class="PMEditor.SampleModule.Views.Problem1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:markup="clr-namespace:Common.Markups;assembly=Common"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="{markup:CommonImageSource FileName=climb.png}" Stretch="Uniform"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="200"/>
                    <Setter Property="Width" Value="300"/>
                    <Setter Property="FontSize" Value="50"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="등산" Command="{Binding ClickCommand}" Margin="10" />
            <Button Content="먹방" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
